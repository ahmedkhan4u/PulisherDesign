<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignUpActivity"
    >

    <ImageView
        android:id="@+id/iv_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/background"
        android:scaleType="fitXY"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#9F000000"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:fontFamily="@font/regular"
            android:text="Welcome to Signup NewsBag !"
            android:textColor="#fff" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="50dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/personal_info_edittext"
            android:layout_marginTop="30dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="5dp"
                android:src="@drawable/ic_person_outline_black_24dp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2B2B2B" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Username"
                android:textColor="#000"
                android:gravity="center_vertical"
                android:fontFamily="@font/regular"
                android:paddingLeft="20dp"
                />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="50dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/personal_info_edittext"
            android:layout_marginTop="25dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:src="@drawable/ic_mail_outline_black_24dp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2B2B2B" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Email"
                android:textColor="#000"
                android:paddingLeft="20dp"
                android:fontFamily="@font/regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="50dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/personal_info_edittext"
            android:layout_marginTop="25dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:src="@drawable/ic_key_black_24dp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2B2B2B" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="#000"
                android:paddingLeft="20dp"
                android:fontFamily="@font/regular"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="50dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/personal_info_edittext"
            android:layout_marginTop="25dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="8dp"
                android:src="@drawable/ic_local_phone_black_24dp"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#2B2B2B" />
            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Contact number"
                android:textColor="#000"
                android:paddingLeft="20dp"
                android:fontFamily="@font/regular"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_signup_signup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sign up"
            android:fontFamily="@font/regular"
            android:textColor="#fff"
            android:paddingHorizontal="80dp"
            android:background="@drawable/sign_in_button"
            android:layout_marginTop="35dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="or"
            android:fontFamily="@font/regular"
            android:textColor="#6EFFFFFF"
            android:layout_marginTop="15dp"/>

        <LinearLayout
            android:id="@+id/btn_signup_facebook_signup"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginHorizontal="60dp"
            android:paddingVertical="6dp"
            android:paddingHorizontal="10dp"
            android:gravity="center_vertical"
            android:background="@drawable/signup_facebook_button"
            android:layout_marginTop="15dp">
            <ImageView
                android:layout_width="40dp"
                android:layout_height="20dp"
                android:paddingRight="5dp"
                android:src="@drawable/fb_icon"
                />
            <LinearLayout
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="#fff" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Signup in facebook"
                android:fontFamily="@font/regular"
                android:textColor="#fff"
                android:gravity="center" />
        </LinearLayout>


    </LinearLayout>



</RelativeLayout>